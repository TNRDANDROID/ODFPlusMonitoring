<?xml version="1.0" encoding="utf-8"?>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:customfontdemo="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary">


                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start"
                        android:src="@mipmap/back_arrow" />

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin"
                        android:text="View Profile"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        customfontdemo:fontName="@string/font_circular_medium" />


                </RelativeLayout>

                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/header_layout"
                    android:background="#FFF"
                    />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


            <LinearLayout
                android:id="@+id/child_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/padding"
                        app:civ_border_width="2dip"
                        app:civ_border_color="#01d1c1"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_preview"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_margin="@dimen/padding"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_bg_circle"
                        app:civ_border_width="2dip"
                        app:civ_border_color="#01d1c1"
                        android:src="@drawable/ic_account_circle_black_24dp" />


                    <RelativeLayout
                        android:id="@+id/edit_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="@dimen/_37sdp"
                        android:background="@drawable/edit_profile_bg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@android:drawable/ic_menu_edit" />

                    </RelativeLayout>

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motivator_district_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator District"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_district_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/motivator_block_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Block"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_block_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motivator_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Mobile No"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_mobile_no_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motovator_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Address"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_address_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_box"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:lines="5"
                            android:maxLines="5"
                            android:minLines="3"
                            android:padding="10dp"
                            android:scrollbars="vertical" />

                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Enter Email Id"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:id="@+id/email_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyEditTextView
                            android:id="@+id/motivator_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textWebEmailAddress"
                            android:scrollbars="vertical"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>







                <LinearLayout
                    android:id="@+id/motivator_bank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Bank Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_bank_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motivator_branch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator Branch Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_branch_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Motivator DOB"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:id="@+id/dob_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/motivator_dob_tv"
                            style="@style/Toolbar.TitleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toLeftOf="@+id/calendar_icon"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                            android:id="@+id/calendar_icon"
                            style="@style/Toolbar.TitleText"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:background="@drawable/datepicker_icon"
                            android:focusable="true"
                            android:focusableInTouchMode="true"

                            android:layout_marginRight="@dimen/_6sdp"/>


                        <!--<com.nic.ODFPlusMonitoring.Support.MyCustomTextView-->
                        <!--android:id="@+id/motivator_dob_tv"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentStart="true"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:background="@android:color/transparent"-->
                        <!--android:inputType="textPersonName"-->
                        <!--android:textColor="@android:color/black"-->
                        <!--android:textSize="@dimen/_15sdp"-->
                        <!--android:visibility="visible"-->
                        <!--customfontdemo:fontName="@string/font_circular_book" />-->


                    </RelativeLayout>


                </LinearLayout>






                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"

                    android:background="@drawable/btn_signup"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menu_title_size" />


                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />-->


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/edit_text_padding"
            android:visibility="gone"
            android:src="@drawable/double_down_arroe" />

        <ImageView
            android:id="@+id/arrow_image_up"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/horizontal_line"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/edit_text_padding"
            android:rotation="180"
            android:visibility="gone"
            android:src="@drawable/double_down_arroe" />

    </android.support.design.widget.CoordinatorLayout>
