<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ccp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/district_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:layout_marginBottom="15dp"

                card_view:cardBackgroundColor="#D3D3D3"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/vertical_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/gray_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"

                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                customfontdemo:fontName="@string/font_circular_medium" />

                            <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                android:id="@+id/from_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="                     "

                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                customfontdemo:fontName="@string/font_circular_medium" />

                            <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:padding="5dp"

                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                customfontdemo:fontName="@string/font_circular_medium" />

                            <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                android:id="@+id/to_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:padding="5dp"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                customfontdemo:fontName="@string/font_circular_medium" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                android:id="@+id/project_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:padding="10dp"
                                android:text=""
                                android:textAlignment="gravity"
                                android:textColor="#000"
                                android:textSize="18sp"
                                customfontdemo:fontName="@string/font_circular_book" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                        android:id="@+id/schedule_description_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:textAlignment="inherit"
                                        android:textColor="#000"
                                        android:textSize="18sp"
                                        customfontdemo:fontName="@string/font_circular_book" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text=" "
                                        android:textAlignment="viewEnd"
                                        android:textColor="#000"
                                        android:textSize="18sp"
                                        customfontdemo:fontName="@string/font_circular_book" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:padding="10dp"
                                        android:text=" "
                                        android:textColor="#000"
                                        android:textSize="18sp"
                                        customfontdemo:fontName="@string/font_circular_book" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
                                        android:id="@+id/level_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text=" "
                                        android:textAlignment="inherit"
                                        android:textColor="#000"
                                        android:textSize="18sp"
                                        customfontdemo:fontName="@string/font_circular_book" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/schedule_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="@dimen/_12sdp">

        <com.nic.ODFPlusMonitoring.Support.MyCustomTextView
            android:id="@+id/schedule_tv"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone"
            customfontdemo:fontName="@string/font_circular_medium" />


    </RelativeLayout>


</RelativeLayout>
